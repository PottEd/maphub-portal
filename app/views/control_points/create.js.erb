// This JavaScript is executed when the #create controller method finishes

// slide down the panel
$("#modal-control-point").modal('hide');

// first clear everything, then reload OpenLayers
$("#viewer").empty();
$("#layerswitcher").empty();
initOpenLayers();

// update the CP count in the view
$.getJSON(window.annotation_view.control_points_url, function(data) { 
  var count = 0;
  $.each(data, function(k, v) { count++; });
  $("#control-points-count").html(count);
});
$("#control-points-count-link").fadeIn("slow");

