<h1><%= @collection.title %> <small>by <%= link_to @collection.user.username, @collection.user %></small></h1>

<div id="collectionDetails">
  
  <div class="floatLeft halfSize">
  <p>This collection was created <%= time_ago_in_words(@collection.creation_date) %> ago, last edited  <%= time_ago_in_words(@collection.edit_date) %> ago.</p>

  <% unless @collection.description.empty? %>
    <blockquote>
      <%=  @collection.description %>
    </blockquote>
  <% end %>
  </div>
  
  <div class="floatRight tools">  
      <%= render :partial => "users/badge", :locals => { :user => @collection.user } %>
      <br style="clear:both;">
      <% if current_user == @collection.user %>
          <%= link_to 'Edit this collection', edit_collection_path(@collection) %><br>
          <%= link_to 'Delete', collection_path(@collection), :method => :delete, :confirm => "Are you sure you want to delete this Collection? Your maps will not be deleted." %>
      <% end %>
  </div>
</div>

<br style="clear:both;">

<div class="mapList">
<% for map in @collection.maps %>
  <%= render :partial => "maps/thumbnail", :locals => { :map => map } %>
<% end %>
</div>
