<h1>Collections</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Maps</th>
    <th>Created</th>
    <th>User</th>
  </tr>

<% @collections.each do |collection| %>
  <tr>
    <td><%= link_to collection.title, collection %></td>
    <td><%= collection.maps.count %></td>
    <td><%= collection.creation_date %></td>
    <td><%= link_to collection.user.username, collection.user %></td>
  </tr>
<% end %>
</table>

<br />

<% if user_signed_in? %>
<button><%= link_to 'Create a new collection', new_collection_path %></button>
<% end %>
