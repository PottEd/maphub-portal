<h1>Annotations</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Created</th>
    <th>User</th>
    <th>Map</th>
  </tr>

<% @annotations.each do |annotation| %>
  <tr>
    <td><%= link_to annotation.title, annotation %></td>
    <td><%= annotation.creation_date %></td>
    <td><%= link_to annotation.user.username, annotation.user %></td>
    <td><%= link_to annotation.map.title, annotation.map %></td>
  </tr>
<% end %>
</table>

