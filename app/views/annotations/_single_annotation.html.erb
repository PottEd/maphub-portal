<a 
  href="<%= map_url(annotation.map) %>" 
  rel="popover" 
  data-original-title="<img src='<%= annotation.map.thumbnail_small_uri %>'/>"
  data-content="<%= simple_format h annotation.body %>">  
  <%= annotation.truncated_body %>
</a>

<small>by <%= link_to annotation.user.username, annotation.user %>, <%= time_ago_in_words(annotation.updated_at) %> ago</small>