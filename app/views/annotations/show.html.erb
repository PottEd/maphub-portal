<h1>Annotation</h1>

<%= render :partial => 'maps/thumbnail', :locals => { :map => @annotation.map } %>
<br style="clear:both">

<p>
  <b>Title:</b>
  <%= @annotation.title %>
</p>

<p>
  <b>Body:</b>
  <%= @annotation.body %>
</p>

<p>
  <b>Creation date:</b>
  <%= @annotation.creation_date %>
</p>

<p>
  <b>Edit date:</b>
  <%= @annotation.edit_date %>
</p>

<% if current_user == @annotation.user %>
<div class="pseudoButton">
<%= link_to 'Edit', edit_annotation_path(@annotation) %>
</div>
<% end %>
